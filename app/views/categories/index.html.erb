<p id="notice"><%= notice %></p>

<h1 class="padded">Categories</h1>

<% @categories.in_groups_of(3).each do |group| %>
  <div class="row">
      <% group.each do |category| %>
        <% if category %>
          <div class="col-sm-4 center padded">
            <%= link_to image_tag(category.picture, size: ("200")), category %><br>
            <%= link_to category.name, category, class: "center h2"%>
            <br>
          </div>
        <% end %>
      <% end %>
  </div>
<% end %>

<%= link_to 'New category', new_category_path %>
