<header>
  <div class="nav">
    <%= link_to "Mama Sue's Bath Products", root_path, id: "logo" %>
  </div>
  <div class="navbar navbar-inverse">
    <div class="container">
      <nav>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Home",   root_path %></li>
          <li><%= link_to "Products",   items_path %></li>
          <li><%= link_to "Categories", categories_path %></li>
          <% if current_user %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.name %>
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% if can? :read, User %>
                  <li><%= link_to "User List", users_path %></li>
                <% end %>
                <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>